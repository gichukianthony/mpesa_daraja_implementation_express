# Copy to .env and fill in your values
# Server
PORT=3000
NODE_ENV=development

# M-Pesa Daraja API (sandbox | production)
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_PASS_KEY=your_passkey
MPESA_SHORT_CODE=174379

# Callback URL: Safaricom calls this when payment completes.
# Local dev: use ngrok (e.g. ngrok http 3000) then set:
#   MPESA_CALLBACK_URL=https://YOUR_NGROK_SUBDOMAIN.ngrok-free.app/api/payments/callback
MPESA_CALLBACK_URL=https://YOUR_NGROK_SUBDOMAIN.ngrok-free.app/api/payments/callback
