{
  "name": "mpesa-daraja",
  "version": "1.0.0",
  "description": "Simple M-Pesa Daraja API integration with Express and TypeScript",
  "packageManager": "pnpm@9.0.0",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "ngrok": "ngrok http 3000",
    "env:check": "node scripts/check-env.js"
  },
  "keywords": [
    "mpesa",
    "daraja",
    "express",
    "typescript"
  ],
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "custom-env": "^2.0.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18"
  }
}
